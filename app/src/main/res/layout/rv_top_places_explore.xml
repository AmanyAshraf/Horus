<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="24dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/top_places_explore"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/im_rv_topPlacesPhoto_explore" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rv_placeName_explore"
            tools:text="Pyramids"
            app:layout_constraintStart_toStartOf="@id/im_rv_topPlacesPhoto_explore"
            app:layout_constraintBottom_toBottomOf="@id/im_rv_topPlacesPhoto_explore"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heart_white"
            app:layout_constraintEnd_toEndOf="@id/im_rv_topPlacesPhoto_explore"
            app:layout_constraintTop_toTopOf="@id/im_rv_topPlacesPhoto_explore"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:id="@+id/im_add_to_fav_explore" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>