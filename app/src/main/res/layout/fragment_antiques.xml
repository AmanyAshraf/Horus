<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".presentation.fragment.AntiquesFragment">
    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_back_arrow_antiques"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="131dp"
                    android:src="@drawable/back_arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_Statue_of_Mentuhotep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="85dp"
                    android:layout_marginTop="126dp"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="24sp"
                    android:text="Statue of Mentuhotep"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/iv_back_arrow_antiques"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="120dp"
                    android:src="@drawable/heart_white"
                    app:layout_constraintStart_toEndOf="@+id/tv_Statue_of_Mentuhotep"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView
                    android:id="@+id/iv_egyptain_muesums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:src="@drawable/mentuh"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_Statue_of_Mentuhotep" />
                <ImageView
                    android:id="@+id/iv_location_out_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="36dp"
                    android:src="@drawable/location_out_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_egyptain_muesums"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/eclipse_location"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_location_out_line"
                    app:layout_constraintEnd_toEndOf="@+id/iv_location_out_line"
                    app:layout_constraintStart_toStartOf="@+id/iv_location_out_line"
                    app:layout_constraintTop_toTopOf="@+id/iv_location_out_line"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="3dp"/>
                <TextView
                    android:id="@+id/tv_eg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="21sp"
                    android:text="@string/the_egyptain"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/iv_location_out_line"
                    app:layout_constraintTop_toBottomOf="@+id/iv_egyptain_muesums"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="11dp"
                    />
                <TextView
                    android:id="@+id/tv_Statue_of_Mentuhotep_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="48sp"
                    android:text="Statue of Mentuhotep"
                    android:textColor="#333333"
                    android:textSize="26sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_eg" />

                <TextView
                    android:id="@+id/tv_Middle_Kingdom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Middle Kingdom"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="24dp"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Statue_of_Mentuhotep_1" />
                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="36sp"
                    android:text="About"
                    android:textColor="#333333"
                    android:textSize="24dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Middle_Kingdom" />

                <TextView
                    android:id="@+id/tv_king_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="King Mentuhotep Nebhepetre is the founder of the Middle Kingdom, where this Theban king was able to unify Egypt for the second time after King Narmer. Howard Carter stumbled upon this statue in 1900 by chance when his horse stumbled in the outer courtyard of the king\'s mortuary temple in Deir el-Bahari, west of Luxor, where he found a well leading to a small room in which this statue was found wrapped in linen. "
                    android:textSize="14sp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_about" />

                <TextView
                    android:id="@+id/tv_Read_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="21sp"
                    android:text="@string/Read_more"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_king_information" />
                <ImageView
                    android:id="@+id/iv_under_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/under_arrow"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="109dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_king_information"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </LinearLayout>

</layout>