<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.ui.activity.LoginActivity">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progress_bar_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login to your Account"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="104dp"
            android:layout_marginStart="24dp"
            android:textSize="20sp"
            android:textColor="@color/black500"
            android:id="@+id/tv"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginEnd="24dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            android:paddingEnd="18dp"
            android:drawableStart="@drawable/edit_text_profile_icon_login"
            android:drawablePadding="18dp"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/poppins_regular"
            android:hint="Username"
            android:paddingStart="18dp"
            android:layout_marginEnd="32dp"
            android:id="@+id/ed_email_login"
            android:background="@drawable/edit_text_login" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ed_email_login"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            android:paddingEnd="44dp"
            android:hint="Password"
            android:drawableStart="@drawable/edit_text_unlock_icon_login"
            android:drawablePadding="18dp"
            android:paddingStart="18dp"
            android:fontFamily="@font/poppins_regular"
            android:inputType="textPassword"
            android:layout_marginEnd="32dp"
            android:id="@+id/ed_password_login"
            android:background="@drawable/edit_text_login" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/ed_password_login"
            app:layout_constraintTop_toTopOf="@+id/ed_password_login"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="@+id/ed_password_login"
            android:layout_marginEnd="18dp"
            android:id="@+id/show_password_login"
            android:src="@drawable/logo_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ed_password_login"
            android:text="Forget Password?"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black500"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="4dp"
            android:id="@+id/forgetPassword_login" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ed_password_login"
            android:layout_marginTop="52dp"
            android:background="@drawable/button_orange"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:text="Sign In "
            android:id="@+id/btn_signIn_login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_signIn_login"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:id="@+id/btn_signUp_login"
            android:text="Sign Up "
            android:background="@drawable/button_white"
            android:textAllCaps="false"
            android:textColor="@color/black500"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>