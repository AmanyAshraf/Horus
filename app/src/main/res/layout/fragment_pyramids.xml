<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.fragment.PyramidsFragment">
    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_back_arrow_pyramids"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="131dp"
                    android:src="@drawable/back_arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_pyramids"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="126dp"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="24sp"
                    android:text="Pyramids"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/iv_back_arrow_pyramids"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="120dp"
                    android:src="@drawable/heart_white"
                    app:layout_constraintStart_toEndOf="@+id/tv_pyramids"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView
                    android:id="@+id/iv_Pyramids_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:src="@drawable/pyramids"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_pyramids" />
                <ImageView
                    android:id="@+id/iv_location_out_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="36dp"
                    android:src="@drawable/location_out_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_Pyramids_image"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/eclipse_location"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_location_out_line"
                    app:layout_constraintEnd_toEndOf="@+id/iv_location_out_line"
                    app:layout_constraintStart_toStartOf="@+id/iv_location_out_line"
                    app:layout_constraintTop_toTopOf="@+id/iv_location_out_line"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="3dp"/>
                <TextView
                    android:id="@+id/tv_giza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="21sp"
                    android:text="@string/giza"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/iv_location_out_line"
                    app:layout_constraintTop_toBottomOf="@+id/iv_Pyramids_image"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="11dp"
                    />
                <TextView
                    android:id="@+id/tv_bank_cairo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="24dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Pyramids"
                    android:textColor="#333333"
                    android:textSize="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_giza" />

                <TextView
                    android:id="@+id/bst_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineHeight="24sp"
                    android:text="#1 Best to visit"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_bank_cairo" />
                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="36sp"
                    android:text="About"
                    android:textColor="#333333"
                    android:textSize="24dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bst_view" />
                <TextView
                    android:id="@+id/tv_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="21sp"
                    android:text="The Giza pyramid complex is an archaeological site on the Giza plateau, on the outskirts of Cairo, Egypt. It includes the three great pyramids, the Great Sphinx, several tombs, a workers\' village and an industrial complex. It is located in the Western Desert,about 9 km west of the Nile River in the old town of Giza, and about 13 km southwest of Cairo city centre."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_about" />
                <TextView
                    android:id="@+id/tv_Read_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="21sp"
                    android:text="@string/Read_more"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_information" />
                <ImageView
                    android:id="@+id/iv_under_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/under_arrow"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="109dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_information"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tv_the_area_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="36sp"
                    android:text="The area"
                    android:textColor="#333333"
                    android:textSize="24dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Read_more" />
                <TextView
                    android:id="@+id/tv_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adress"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="21sp"
                    android:textColor="#333333"
                    android:lineHeight="36sp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_the_area_1" />
                <TextView
                    android:id="@+id/tv_informa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pyr_address"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:lineHeight="36sp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_adress" />
                <TextView
                    android:id="@+id/tv_how"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How to get there"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:lineHeight="36sp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="17dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_informa" />
                <TextView
                    android:id="@+id/tv_air"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ronald Reagan National Airport . 4.98 km"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineHeight="21sp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_how" />
                <TextView
                    android:id="@+id/tv_airport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dulles Intl Airport . 39 km"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineHeight="21sp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_air" />
                <TextView
                    android:id="@+id/tv_old_town"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="King ST - Old Town . 10 min walk"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineHeight="21sp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_airport" />
                <TextView
                    android:id="@+id/tv_road"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Braddock Road . 11 min walk"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineHeight="21sp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_old_town" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </LinearLayout>


</layout>