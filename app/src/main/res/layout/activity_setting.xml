<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.ui.activity.SettingActivity">
    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_setting_arrow_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_arrow"
                    android:layout_marginTop="61dp"
                    android:layout_marginStart="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="24sp"
                    android:text="@string/setting"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginTop="56dp"
                    android:layout_marginStart="96dp"
                    app:layout_constraintStart_toEndOf="@+id/iv_setting_arrow_back"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/iv_profile_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/profile_setting_image"
                    android:layout_marginTop="85dp"
                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_setting_arrow_back" />

                <TextView
                    android:id="@+id/tv_account_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Personal and account Info"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginTop="80dp"
                    android:layout_marginStart="18dp"
                    app:layout_constraintStart_toEndOf="@+id/iv_profile_info"
                    app:layout_constraintTop_toBottomOf="@+id/tv_setting" />
                <ImageView
                    android:id="@+id/iv_arrow_info_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/left_arrow"
                    android:layout_marginTop="85dp"
                    android:layout_marginStart="55dp"
                    app:layout_constraintStart_toEndOf="@+id/tv_account_info"
                    app:layout_constraintTop_toBottomOf="@id/tv_setting"/>

                <View
                    android:id="@+id/v_line1"
                    android:layout_width="360dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="#E6E6E6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_account_info"
                    />
                <ImageView
                    android:id="@+id/iv_pass_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pass_val"
                    android:layout_marginTop="154dp"
                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_setting_arrow_back" />

                <TextView
                    android:id="@+id/tv_password_and_security"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Password and security"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginTop="150dp"
                    android:layout_marginStart="18dp"
                    app:layout_constraintStart_toEndOf="@+id/iv_profile_info"
                    app:layout_constraintTop_toBottomOf="@+id/tv_setting" />
                <ImageView
                    android:id="@+id/iv_arrow_info_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/left_arrow"
                    android:layout_marginTop="157dp"
                    android:layout_marginStart="80dp"
                    app:layout_constraintStart_toEndOf="@+id/tv_password_and_security"
                    app:layout_constraintTop_toBottomOf="@id/tv_setting"/>

                <View
                    android:id="@+id/v_line2"
                    android:layout_width="360dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="#E6E6E6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_password_and_security"
                    />
                <ImageView
                    android:id="@+id/iv_preferences_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/setting"
                    android:layout_marginTop="225dp"
                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_setting_arrow_back" />

                <TextView
                    android:id="@+id/tv_preferences"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="preferences"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginTop="220dp"
                    android:layout_marginStart="18dp"
                    app:layout_constraintStart_toEndOf="@+id/iv_profile_info"
                    app:layout_constraintTop_toBottomOf="@+id/tv_setting" />
                <ImageView
                    android:id="@+id/iv_arrow_info_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/left_arrow"
                    android:layout_marginTop="229dp"
                    android:layout_marginStart="165dp"
                    app:layout_constraintStart_toEndOf="@+id/tv_preferences"
                    app:layout_constraintTop_toBottomOf="@id/tv_setting"/>
                <View
                    android:id="@+id/v_line3"
                    android:layout_width="360dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="#E6E6E6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_preferences"
                    />
                <ImageView
                    android:id="@+id/iv_Support_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/support_image"
                    android:layout_marginTop="296dp"
                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_setting_arrow_back" />

                <TextView
                    android:id="@+id/tv_Support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Support"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginTop="290dp"
                    android:layout_marginStart="18dp"
                    app:layout_constraintStart_toEndOf="@+id/iv_profile_info"
                    app:layout_constraintTop_toBottomOf="@+id/tv_setting" />
                <ImageView
                    android:id="@+id/iv_arrow_info_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/left_arrow"
                    android:layout_marginTop="285dp"
                    android:layout_marginStart="195dp"
                    app:layout_constraintStart_toEndOf="@+id/tv_Support"
                    app:layout_constraintTop_toBottomOf="@id/tv_setting"/>
                <View
                    android:id="@+id/v_line4"
                    android:layout_width="360dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="#E6E6E6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Support"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_sign_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="33dp"
                    android:background="@drawable/sign_in_shape"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="22sp"
                    android:text="Sign out"
                    android:textAllCaps="false"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Support" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>

</layout>