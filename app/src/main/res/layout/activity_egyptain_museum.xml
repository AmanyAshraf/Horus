<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.ui.activity.EgyptainMuseumActivity">
    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_back_arrow_museums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="61dp"
                    android:src="@drawable/back_arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_double_Egyptian_Museum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="56dp"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="24sp"
                    android:text="Egyptian Museum"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/iv_back_arrow_museums"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/iv_egyptain_muesums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:src="@drawable/egyptain"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_double_Egyptian_Museum" />
                <TextView
                    android:id="@+id/tv_egyptain_museum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Egyptian Museum"
                    android:textColor="#333333"
                    android:textSize="32dp"
                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_egyptain_muesums" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_fill"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_egyptain_museum"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="27dp"
                    android:id="@+id/iv_star_fill_1"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_fill"
                    app:layout_constraintStart_toStartOf="@id/iv_star_fill_1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_egyptain_museum"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/iv_star_fill_2"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_fill"
                    app:layout_constraintStart_toStartOf="@id/iv_star_fill_2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_egyptain_museum"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/iv_star_fill_3"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_fill"
                    app:layout_constraintStart_toStartOf="@id/iv_star_fill_3"
                    app:layout_constraintTop_toBottomOf="@+id/tv_egyptain_museum"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/iv_star_fill_4"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_empty"
                    app:layout_constraintStart_toStartOf="@id/iv_star_fill_4"
                    app:layout_constraintTop_toBottomOf="@+id/tv_egyptain_museum"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/iv_star_empty"
                    />

                <TextView
                    android:id="@+id/tv_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="144 reviews"
                    android:textSize="16sp"
                    android:lineHeight="24sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#666666"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="11dp"
                    app:layout_constraintStart_toEndOf="@+id/iv_star_empty"
                    app:layout_constraintTop_toBottomOf="@+id/tv_egyptain_museum" />

                <TextView
                    android:id="@+id/tv_visit_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="24sp"
                    android:text="@string/Visit_website"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginTop="48dp"
                    android:layout_marginLeft="26dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_egyptain_museum" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="21sp"
                    android:text="Opens 11:00 AM - 11:00 PM"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_visit_site"/>

                <View
                    android:id="@+id/v_line1"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="#E6E6E6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_time"
                    />
                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="36sp"
                    android:text="About"
                    android:textColor="#333333"
                    android:textSize="24dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line1" />
                <TextView
                    android:id="@+id/tv_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="The Egyptian Museum is the oldest archaeological museum in the Middle East, and houses the largest collection of ancient Egyptian antiquities in the world."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_about" />

                <View
                    android:id="@+id/v_line2"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="#E6E6E6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_information"
                    />

                <ImageView
                    android:id="@+id/iv_mark"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="33dp"
                    android:src="@drawable/mark_exclamation"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v_line2" />

                <TextView
                    android:id="@+id/tv_amenties"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="24sp"
                    android:text="Amenities"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginTop="26dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintStart_toStartOf="@id/iv_mark"
                    app:layout_constraintTop_toBottomOf="@id/v_line2" />
                <TextView
                    android:id="@+id/tv_explanation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free parking"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="21sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="56dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_amenties"/>
                <TextView
                    android:id="@+id/tv_free_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explanation in sign language"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="56dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_explanation"/>
                <TextView
                    android:id="@+id/tv_Cafeterial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cafeteria"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="56dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_free_wifi"/>
                <TextView
                    android:id="@+id/tv_Gift_House"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gift House"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="56dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_Cafeterial"/>
                <View
                    android:id="@+id/v_line4"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="#E6E6E6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Gift_House"
                    />
                <TextView
                    android:id="@+id/tv_the_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The area"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="24sp"
                    android:textColor="#333333"
                    android:lineHeight="36sp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line4" />
                <TextView
                    android:id="@+id/tv_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="21sp"
                    android:textColor="#333333"
                    android:lineHeight="36sp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_the_area" />
                <TextView
                    android:id="@+id/tv_informa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/information"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:lineHeight="36sp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_adress" />


                <View
                    android:id="@+id/v_line6"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="#E6E6E6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_informa"
                    />
                <TextView
                    android:id="@+id/tv_Reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Reviews"
                    android:clickable="true"
                    android:textSize="24sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="36sp"
                    android:layout_marginTop="34dp"
                    android:layout_marginLeft="28dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line6"
                    />
                <TextView
                    android:id="@+id/tv_Q__A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Q_A"
                    android:textSize="24sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="36sp"
                    android:layout_marginTop="34dp"
                    android:layout_marginLeft="166dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line6"
                    />








            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </LinearLayout>
</layout>