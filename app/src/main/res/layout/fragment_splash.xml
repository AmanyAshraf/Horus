<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.fragment.SplashFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/skip"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/skip_splash"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="24dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/circle"
            android:layout_marginStart="24dp"
            android:layout_marginTop="76dp"
            android:id="@+id/circle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/circle"
            app:layout_constraintTop_toTopOf="@id/circle"
            app:layout_constraintEnd_toEndOf="@id/circle"
            app:layout_constraintBottom_toBottomOf="@id/circle"
            android:src="@drawable/minilogo" />

        <TextView
            android:id="@+id/tv_sign_to_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/sign_in_to_start"
            android:textColor="@color/black500"
            android:textSize="32sp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/circle" />

        <TextView
            android:id="@+id/tv_termsof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textSize="14sp"
            android:text="@string/terms_of"
            android:textColor="@color/black500"
            app:layout_constraintBottom_toTopOf="@+id/btn_google"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_sign_to_start" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_termsof"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/button_white"
            android:layout_marginTop="32dp"
            android:id="@+id/btn_google" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue with Google"
            android:textColor="@color/black500"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintStart_toStartOf="@+id/btn_google"
            app:layout_constraintEnd_toEndOf="@+id/btn_google"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_google"
            app:layout_constraintBottom_toBottomOf="@+id/btn_google" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/btn_google"
            app:layout_constraintTop_toTopOf="@+id/btn_google"
            app:layout_constraintBottom_toBottomOf="@id/btn_google"
            android:src="@drawable/google"
            android:layout_marginStart="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_google"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/button_white"
            android:layout_marginTop="12dp"
            android:id="@+id/btn_facebook" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue with Facebook"
            android:textColor="@color/black500"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintStart_toStartOf="@+id/btn_facebook"
            app:layout_constraintEnd_toEndOf="@+id/btn_facebook"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_facebook"
            app:layout_constraintBottom_toBottomOf="@+id/btn_facebook" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/btn_facebook"
            app:layout_constraintTop_toTopOf="@+id/btn_facebook"
            app:layout_constraintBottom_toBottomOf="@id/btn_facebook"
            android:src="@drawable/facebook"
            android:layout_marginStart="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_facebook"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/button_white"
            android:layout_marginTop="12dp"
            android:id="@+id/btn_mail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue with Mail"
            android:textColor="@color/black500"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintStart_toStartOf="@+id/btn_mail"
            app:layout_constraintEnd_toEndOf="@+id/btn_mail"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_mail"
            app:layout_constraintBottom_toBottomOf="@+id/btn_mail" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/btn_mail"
            app:layout_constraintTop_toTopOf="@+id/btn_mail"
            app:layout_constraintBottom_toBottomOf="@id/btn_mail"
            android:src="@drawable/mail"
            android:layout_marginStart="16dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>